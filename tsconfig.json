{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": false // Allow the 'any' type
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/Base.ts"]
}
